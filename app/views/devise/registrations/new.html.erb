<div class='row'>
  <div class="col-md-10 col-md-offset-1">
  <% if params[:plan] == '2' %>
    <h1 class= "text-center">Pro Account</h1>
    <p class="text-center">Sign up for the pro account for R30/month and get access to the community and contact information</p>
  <% else %>
    <h1 class= "text-center">Basic Account</h1>
    <p class="text-center">Sign up for free and get basic access to the community</p>
  <% end %>
    <div class="col-md-10 col-md-offset-1">
      <div class= "well">
      <h2>Sign up</h2>

        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else%>
          <%= render "basic_form" %>
        <% end %>

      <%= render "devise/shared/links" %>
      </div>
      </div>
    </div>
</div>